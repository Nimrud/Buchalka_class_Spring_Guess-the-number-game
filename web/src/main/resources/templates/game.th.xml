<thlogic>
    <attr sel="#head"
        th:replace="~{fragments/head :: headFragment}"/>
    <attr sel="#gameTitle"
          th:text="#{game.title}"/>
    <attr sel="#enterGuess"
          th:text="#{game.enter.guess}"/>
    <attr sel="#submit"
          th:value="#{game.submit}"/>
    <attr sel="#footer"
          th:replace="~{fragments/footer :: footerFragment}"/>
    <attr sel="#mainMessage"
          th:text="${mainMessage}"/>
    <attr sel="#resultMessage"
          th:text="${resultMessage}"/>
</thlogic>