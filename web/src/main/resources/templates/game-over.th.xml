<thlogic>
    <attr sel="#head"
          th:replace="~{fragments/head :: headFragment}"/>
    <attr sel="#footer"
          th:replace="~{fragments/footer :: footerFragment}"/>
    <attr sel="#gameTitle"
          th:text="#{game.title}"/>
    <attr sel="#gameOver"
          th:text="#{game.over}"/>
    <attr sel="#resultMessage"
          th:text="${resultMessage}"/>
    <attr sel="#playAgain"
          th:href="@{restart}" th:text="#{game.over.restart}"/>
    <attr sel="#home"
          th:href="@{home}" th:text="#{game.over.home}"/>
</thlogic>